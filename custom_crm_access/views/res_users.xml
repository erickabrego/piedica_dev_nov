<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <record id="crm_access_res_users_form_view" model="ir.ui.view">
           <field name="name">crm_access_res_users_form_view</field>
           <field name="model">res.users</field>
           <field name="inherit_id" ref="base.view_users_form"/>
           <field name="arch" type="xml">

               <xpath expr="//page[@name='references']/group/group" position="after">
                   <group string="Acceso CRM" name="crm_access_rule_group">
                       <field name="x_crm_team_ids" widget="many2many_tags" options="{'no_create':True}"/>
                   </group>
               </xpath>

           </field>
       </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_access_rule_view_tree" model="ir.ui.view">
            <field name="name">crm_access_rule_view_tree</field>
            <field name="model">crm.access.rule</field>
            <field name="arch" type="xml">
                <tree string="crm_access_rule_tree" editable="bottom">
                    <field name="name"/>
                    <field name="company_id" options="{'no_create':True}"/>
                    <field name="company_ids" widget="many2many_tags" options="{'no_create':True}"/>
                </tree>
            </field>
        </record>

        <record id="crm_access_rule_action" model="ir.actions.act_window">
            <field name="name">Reglas de acceso a CRM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.access.rule</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="crm_access_rule_menuitem" name="Reglas de acceso a CRM" parent="crm.crm_menu_config" action="crm_access_rule_action" sequence="100"/>

    </data>
</odoo>